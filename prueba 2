    <script>
        function mostrarProyectos() {
            var tabla = document.getElementById("tablaProyectos");
            if (tabla.style.display === "none" || tabla.style.display === "") {
                tabla.style.display = "block";
            } else {
                tabla.style.display = "none";
            }
        }

        // Configuración de imágenes emergentes
        const totalImages = 50;
        const imagePaths = [];
        for (let i = 1; i <= totalImages; i++) {
            imagePaths.push(`imagenes/imagen${i}.png`);
        }

        const imagenes = [];
        for (let i = 0; i < totalImages; i++) {
            const img = document.createElement("img");
            img.src = imagePaths[i];
            img.classList.add("imagen-pop-up");
            document.body.appendChild(img);
            imagenes.push(img);
        }

        function mostrarImagenAleatoria() {
            const imagen = imagenes[Math.floor(Math.random() * imagenes.length)];
            const anchoPantalla = window.innerWidth;
            const posicionX = Math.floor(Math.random() * anchoPantalla);
            
            imagen.style.left = `${posicionX}px`;
            imagen.style.display = 'block';

            setTimeout(() => {
                imagen.style.display = 'none';
                mostrarImagenAleatoria();
            }, 2000);
        }

        setInterval(mostrarImagenAleatoria, 200);
    </script>

