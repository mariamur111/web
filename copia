    <img src="imagenes/letrasfinales.png" alt="Imagen en el fondo" class="imagen-fondo">

    <!-- Contenedor de imágenes -->
    <div id="image-container"></div>

    <script>
        window.onload = function() {
            var container = document.getElementById("image-container");
            var totalImages = 50;

            for (let i = 1; i <= totalImages; i++) {
                let img = document.createElement("img");
                img.src = "imagenes/imagen" + i + ".jpg";
                img.classList.add("imagen-aleatoria");
                container.appendChild(img);
            }

            function obtenerPosicionAleatoria() {
                var x = Math.random() * window.innerWidth;
                var y = Math.random() * (window.innerHeight / 2) + (window.innerHeight / 2); // Solo en la mitad inferior
                return { x: x, y: y };
            }

            function mostrarImagenAleatoria() {
                var imagenes = document.querySelectorAll('.imagen-aleatoria');
                var imagen = imagenes[Math.floor(Math.random() * imagenes.length)];
                var posicion = obtenerPosicionAleatoria();

                imagen.style.left = posicion.x + 'px';
                imagen.style.top = posicion.y + 'px';
                imagen.style.display = 'block';

                setTimeout(function() {
                    imagen.style.display = 'none';
                    mostrarImagenAleatoria();
                }, 1000); // Menor duración en pantalla
            }

            setInterval(mostrarImagenAleatoria, 300); // Imágenes aparecen más rápido
        };
    </script>

</body>
